#! .desc:
# Signify option incompatibility with previous option
#! .params:
# <"$1"> - incompatible option
#! .uses:
# <_opt_match> $ - string;
#                  literal option matched
#! .rc:
# (2)
#.
opt_compat_fail() {
    printf "%s: '%s': Incompatible with: '%s'\n" \
        "${0##*/}" "$_opt_match" "$1"
    printf "%s: Try '%s --help' for more information.\n" \
        "${0##*/}" "${0##*/}"

    exit 2
} >&2
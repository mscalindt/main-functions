#! .desc:
# Signify option incompatibility with a previous option
#! .params:
# <"$1"> - incompatible option
#! .uses:
# <opt_match> $ - string;
#                 option previously matched
#! .rc:
# (2)
#.
opt_compat_fail() {
    printf "%s: '%s': Incompatible with: '%s'\n" \
        "${0##*/}" "$opt_match" "$1" >&2
    printf "%s: Try '%s --help' for more information.\n" \
        "${0##*/}" "${0##*/}" >&2

    exit 2
}

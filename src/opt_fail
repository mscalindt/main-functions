#! .desc:
# Signify failed option and exit
#! .params:
# ["$1"+] - valid argument(s)
#! .uses:
# <opt_arg> $ - string;
#               second positional parameter of the main environment
# <opt_match> $ - string;
#                 option previously matched
#! .ec:
# (2) failed option
#.
opt_fail() {
    # Signify the failed option ($opt_match) with its arg ($opt_arg) and any
    # valid option arguments ($@).
    opt_arg_err "$opt_match" "$opt_arg" "$@"

    # Issue the exit for failed option (`2`).
    exit 2
}

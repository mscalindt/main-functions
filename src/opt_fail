#! .desc:
# opt_err() wrapper
#! .params:
# ["$1"+] - valid arguments
#! .uses:
# <opt_arg> $ - string;
#               second positional parameter of the main environment
# <opt_match> $ - string;
#                 literal option previously matched
#! .rc:
# (2)
#.
opt_fail() {
    opt_err "$opt_match" "$opt_arg" "$@"

    exit 2
}